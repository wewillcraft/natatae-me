# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
tab_width = 2

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = tab
indent_size = 2
quote_type = double

[*.json]
indent_style = tab
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.html]
indent_style = tab
indent_size = 2

[*.{css,scss,sass,less}]
indent_style = tab
indent_size = 2

[*.{toml,ini,cfg}]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[.git*]
indent_style = space
indent_size = 2

[{package.json,package-lock.json,deno.json,deno.lock}]
indent_style = tab
indent_size = 2

[biome.json]
indent_style = tab
indent_size = 2

[.prettierrc*]
indent_style = space
indent_size = 2

[.env*]
insert_final_newline = true
